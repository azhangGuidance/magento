<?php
    $customer = $this->getCustomer();
    if($customer->getImage()){
        $imageUrl = Mage::getBaseUrl('media').'customer'.$customer->getImage();
    }
?>

<div class="col2-set">
    <div class="box">
        <div class="col-1">
                <div class="box-title">
                    <h3><?php echo $this->__('Profile picture') ?></h3>
                </div>
                <div class="box-content">
                    <?php if($imageUrl):?>
                    <p><image class="profile-picture" width="340px" height="340px" title="Profile Image" src="<?php echo $imageUrl;?>"/></p>
                    <?php endif;?>
                </div>
        </div>
        <div class="col-2">
            <div class="box-title">
                <h3><?php echo $this->__('Personal Information') ?></h3>
                <a href="<?php echo $this->getUrl('customer/account/edit') ?>"><?php echo $this->__('Edit') ?></a>
            </div>
            <div class="box-content">
                <p>
                    <?php echo $this->escapeHtml($customer->getName()) ?>
                    <?php if($customer->getGender()):?>
                    <?php echo $this->__(Mage::getResourceSingleton('customer/customer')->getAttribute('gender')->getSource()->getOptionText($customer->getGender()))?>
                    <?php endif;?>
                    <br/>
                    <?php if($customer->getDob()):?>
                        <?php echo date("F j, Y",strtotime($customer->getDob())) ?><br/>
                    <?php endif;?>
                    <?php echo $this->escapeHtml($customer->getEmail()) ?><br/>
                </p>
            </div>
        </div>
    </div>
</div>
