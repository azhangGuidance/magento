        <?php if($_product->getLatitude()&& $_product->getLongitude()):?>
        <div id="merchant-map"></div>
        <script type="text/javascript">
            var map;
            function initialize() {
                var mapOptions = {
                    zoom: 15
                };
                map = new google.maps.Map(document.getElementById('merchant-map'),
                        mapOptions);
                var lat = <?php echo $_product->getLatitude()?>;
                var lng = <?php echo $_product->getLongitude()?>;
                var pos = new google.maps.LatLng(lat,lng);
                var marker = new google.maps.Marker({
                            position: pos,
                            title:"<?php echo $_product->getName()?>"
                        });
                marker.setMap(map);
                map.setCenter(pos);
                var infowindow = new google.maps.InfoWindow();
                var direction = '<div style="line-height:1.35;overflow:hidden;white-space:nowrap;"><h3><?php echo $_product->getName()?></h3>';
                direction+= '<a target="a_blank" href="https://www.google.com/maps?saddr=My+Location&daddr=<?php echo $_product->getLatitude()?>,<?php echo $_product->getLongitude()?>" >Get Direction</a></div>'
                bindInfoWindow(marker, map, infowindow, direction);

            }
            function bindInfoWindow(marker, map, infowindow, strDescription) {
                google.maps.event.addListener(marker, 'click', function() {
                    infowindow.setContent(strDescription);
                    infowindow.open(map, marker);
                });
            }
            google.maps.event.addDomListener(window, 'load', initialize);
        </script>
        <?php endif;?>
        <div class="clearer"></div>
    </form>
    <script type="text/javascript">
